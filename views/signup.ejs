<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="./styles/style.css" rel="stylesheet">
    <title>InstaFlix</title>
</head>
<body>
    <!-- Background -->
    <div class="w-screen h-screen flex justify-center items-center
        ">

    <form class="p-10 bg-white rounded-xl drop-shadow-lg space-y-5 dark:bg-gray-800 dark:border-gray-700" action="/signup" method="POST">
        <h1 class="text-center text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">InstaFlix</h1>
        <!-- Error Message -->
        <% if (locals.messages.errors) { %>
            <% messages.errors.forEach( el => { %>
                <div class="dark:text-white alert alert-danger"><%= el.msg %></div>
            <% }) %>    
        <% } %>
        <!-- Username -->
        <div class="flex flex-col space-y-2">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" for="email">Username</label>
            <input class="w-96 p-2.5 bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" 
            type="text" placeholder="Username" name="username" id="username">        
        </div>
        <!-- Email -->
        <div class="flex flex-col space-y-2">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" for="email">Email</label>
            <input class="ww-96 p-2.5 bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" type="email" placeholder="name@email.com" name="email" id="email">        
        </div>
        <!-- Password -->
        <div class="flex flex-col space-y-2">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" for="password">Password</label>
            <input class="w-96 p-2.5 bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            type="password" placeholder="••••••••" name="password" id="password">
        </div>
        <!-- Confirm Password -->
        <div class="flex flex-col space-y-2">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" for="password">Confirm Password</label>
            <input class="w-96 p-2.5 bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            type="password" placeholder="••••••••" name="confirmPassword" id="confirmPassword">
        </div>
        <!-- Login/Submit button -->
        <button
            class="w-full px-10 py-2 bg-blue-600 text-white rounded-md
            hover:bg-blue-500 hover:drop-shadow-md duration-300 ease-in text-center cursor-pointer">
            <input class="cursor-pointer" type="submit" value="Sign Up">
        </button>
        <!-- Already have an account -->
        <p class="text-sm font-light text-gray-500 dark:text-gray-400">
            Already have an account? <a href="/login" class="font-medium text-primary-600 hover:underline dark:text-blue-600">Login here</a>
        </p>

    </form>
</div>
</body>
</html>